<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bluessage">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- If your app targets Android 9 or lower, you can declare
         ACCESS_COARSE_LOCATION instead. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.Contatos.TelaContatos">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bluessage.View.Contatos.TelaContatos" />
        </activity>
        <activity android:name=".View.Perfil.TelaPerfil">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bluessage.View.Perfil.TelaPerfil" />
        </activity>
        <activity android:name=".View.Sobre.TelaSobre">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bluessage.View.Sobre.TelaSobre" />
        </activity>
        <activity android:name=".View.TelaAjuda.TelaAjuda">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bluessage.View.TelaAjuda.TelaAjuda" />
        </activity>
        <activity android:name=".View.Chat.TelaChat">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bluessage.View.Chat.TelaChat" />
        </activity>
    </application>

</manifest>